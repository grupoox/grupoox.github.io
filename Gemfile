source "https://rubygems.org"

# Jekyll core
gem "jekyll", "~> 4.4.1"

# Markdown (padrão do Jekyll)
gem "kramdown"
gem "kramdown-parser-gfm"

# Syntax highlight
gem "rouge"

# Plugins úteis e compatíveis
gem "jekyll-feed"
gem "jekyll-seo-tag"
gem "jekyll-sitemap"
gem "jekyll-paginate"
gem "jekyll-archives"

# Windows / compatibilidade
gem "webrick", "~> 1.8"

group :development do
  gem "jekyll-watch"
end
